# SSL Configuration for Transellia
# Copy this file to .env.ssl and update with your values

# Domain name for SSL certificate
DOMAIN=transellia.com

# Email address for Let's Encrypt registration and renewal notifications
EMAIL=admin@transellia.com

# Additional domains (optional, comma-separated)
EXTRA_DOMAINS=

# Let's Encrypt environment (staging or production)
LETSENCRYPT_ENV=production

# Set to "true" to use staging environment for testing
USE_STAGING=false

# Certificate renewal settings
RENEWAL_DAYS=30
RENEWAL_CHECK_INTERVAL=12h

# Security settings
# HSTS (HTTP Strict Transport Security) max age in seconds
HSTS_MAX_AGE=31536000

# Enable HSTS includeSubDomains
HSTS_INCLUDE_SUBDOMAINS=true

# Enable HSTS preload
HSTS_PRELOAD=true

# SSL Protocol settings
SSL_PROTOCOLS=TLSv1.2 TLSv1.3

# SSL Cipher settings
SSL_CIPHERS=ECDHE-RSA-AES256-GCM-SHA512:DHE-RSA-AES256-GCM-SHA512:ECDHE-RSA-AES256-GCM-SHA384:DHE-RSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-SHA384

# Rate limiting settings
RATE_LIMIT_REQUESTS_PER_SECOND=10
RATE_LIMIT_BURST=20